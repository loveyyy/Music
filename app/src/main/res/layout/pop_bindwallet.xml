<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bindwallet_bac"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_500"
    android:background="@drawable/play_bac">

   <RelativeLayout
       android:id="@+id/rl_play_model"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_40">

      <ImageView
          android:id="@+id/iv_play_model"
          android:layout_width="@dimen/dp_32"
          android:layout_height="@dimen/dp_32"
          android:layout_marginLeft="@dimen/dp_10"
          android:layout_centerVertical="true"/>
      <TextView
          android:id="@+id/tv_play_model"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:textSize="@dimen/dp_13"
          android:gravity="center"
          android:textColor="@color/cardview_dark_background"
          android:layout_marginLeft="@dimen/dp_52" />

   </RelativeLayout>
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rcv_pop_list"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
</LinearLayout>