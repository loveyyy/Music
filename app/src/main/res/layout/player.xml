<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:background="@drawable/play_bac">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_25"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_25">
                <com.example.music.ui.custom.CircularProgressView
                    android:id="@+id/cir_pro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backColor="#FFFFFFFF"
                    app:progColor="@color/colorAccent"
                    app:progWidth="@dimen/dp_1"
                    app:backWidth="@dimen/dp_1"
                    app:progress="1" />

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerInParent="true"
                    android:background="@drawable/play"/>
            </RelativeLayout>



            <ImageButton
                android:id="@+id/ibtn_download"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center"
                android:background="@drawable/ic_down"
                android:layout_marginLeft="@dimen/dp_10" />

        </LinearLayout>

    </RelativeLayout>
</layout>
