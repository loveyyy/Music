<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:background="@drawable/bord_corn_button"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_Maintou"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/ic_meau" />
        <EditText
            android:id="@+id/et_search"
            android:layout_width="@dimen/dp_270"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="请输入歌名/歌手"
            android:layout_height="@dimen/dp_45" />

        <ImageView
            android:id="@+id/iv_Search"
            android:layout_width="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/ic_search" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/playview"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_singer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/cardview_shadow_start_color" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_ranktype"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="歌曲" />

                    <TextView
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="歌手" />

                    <TextView
                        android:layout_width="@dimen/dp_85"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="专辑" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_rank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.example.music.ui.custom.PlayerMusicView
            android:id="@+id/playview"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp_68"/>
        <!--<include layout="@layout/player"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_height="@dimen/dp_68"-->
        <!--android:id="@+id/include" />-->

    </RelativeLayout>


</LinearLayout>

