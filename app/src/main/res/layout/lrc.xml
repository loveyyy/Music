<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lrc_bac"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:background="@drawable/ic_heijiao"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_45">
            <ImageView
                android:id="@+id/iv_bac"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal" />
        </RelativeLayout>


        <com.example.music.view.LrcText
            android:id="@+id/lrctext"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_260" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_500"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ib_lrc_last"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginRight="@dimen/dp_38"
                android:background="@drawable/ic_lrc_last" />

            <ImageButton
                android:id="@+id/ib_lrc_play"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginRight="@dimen/dp_38"
                android:background="@drawable/ic_lrc_play" />

            <ImageButton
                android:id="@+id/ib_lrc_next"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_37"
                android:background="@drawable/ic_lrc_next" />

        </LinearLayout>
    </RelativeLayout>
</layout>
